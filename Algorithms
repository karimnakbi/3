

ALGORITHM dotProduct
FUNCTION dotProduct(arr1, arr2) : INTEGER
VAR
    arr1,arr2 : ARRAY_OF INTEGER [];
    i = INTEGER;
    product: INTEGER;
BEGIN
    FOR i FROM 0 TO i < arr1.length DO 
        FOR i FROM 0 TO i < arr2.length DO
          product += arr1[i] * arr2[i]
        END_FOR
    END_FOR
    IF (product === 0) THEN
        return ("The dot product of two orthogonal vectors is zero.")
    ELSE
        return ("The vectors are not orthogonal")
    END_IF
    RETURN product
END